{
  "name": "neat-components",
  "version": "1.0.31",
  "description": "Combining Thoughtbot's Neat Grid system with Styled Components",
  "keywords": [
    "components",
    "grid",
    "neat",
    "styled",
    "styled-components",
    "thoughtbot"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/magicink/neat-components"
  },
  "license": "MIT",
  "author": {
    "name": "Brandon Tom",
    "email": "brandon@brandontom.com"
  },
  "files": [
    "bundle.js",
    "README.md"
  ],
  "main": "bundle.js",
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "lint": "standard --parser babel-eslint \"./src/**.js\"",
    "patch": "npm version patch --no-git-tag-version",
    "prepare": "npx rimraf ./docs && npm run build",
    "storybook": "start-storybook -c .storybook -p 9001",
    "storybook:build": "npx rimraf ./docs && build-storybook -c .storybook -o docs",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "jest": {
    "roots": [
      "<rootDir>/src/"
    ],
    "testEnvironment": "jest-environment-jsdom-global"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-arrow-functions": "^7.2.0",
    "@babel/plugin-transform-block-scoping": "^7.4.4",
    "@babel/plugin-transform-computed-properties": "^7.2.0",
    "@babel/plugin-transform-destructuring": "^7.4.4",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/plugin-transform-parameters": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/plugin-transform-spread": "^7.2.2",
    "@babel/plugin-transform-template-literals": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "@babel/runtime": "^7.4.4",
    "@storybook/addon-storysource": "^5.1.8",
    "@storybook/cli": "^5.1.9",
    "@storybook/react": "^5.1.8",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "eslint-plugin-flowtype": "^3.10.3",
    "flow-bin": "^0.100.0",
    "jest": "^24.8.0",
    "jest-environment-jsdom": "^24.8.0",
    "jest-environment-jsdom-global": "^1.2.0",
    "marked": "^0.6.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "regenerator-runtime": "^0.13.2",
    "rollup": "^1.13.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-terser": "^5.0.0",
    "standard": "^12.0.1",
    "storybook-readme": "^5.0.3",
    "styled-components": "^4.3.1"
  },
  "peerDependencies": {
    "styled-components": "^4.2.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "rules": {
      "flowtype/define-flow-type": 1,
      "flowtype/use-flow-type": 1
    },
    "globals": [
      "describe",
      "expect",
      "it",
      "test"
    ]
  }
}
